
"
"" Settings
"

" List of directories searches for runtime files.
set runtimepath=~/.vimperator
" Ignore case in search patterns
set ignorecase
" Disable ignorecase is pattern contains uppercase characters.
set smartcase
" Highlight previous search pattern matches
set hlsearch
" Disable all guioptions
set guioptions=
" Never show tab bar
set showtabline=0
" Automatically show completions while typing
set wildoptions=auto
" Focus the content after a page has loaded instead of textboxes.
set focuscontent
" Set external editor
set editor="vim -f -g -c \":source ~/.vimrc\" -c \":spell\""

"
"" Keybindings
"

" Set mapleader
let mapleader = ";"

" Disable <C-w>
map <C-w> <Nop>
nmap <C-w> <Nop>
vmap <C-w> <Nop>

map <C-Tab> <Nop>
nmap <C-Tab> <Nop>
vmap <C-Tab> <Nop>

map <leader>ns :noscript popup<cr>

"
"" Abbreviations
"

cabbrev rd http://www.reddit.com
cabbrev yt http://www.youtube.com
cabbrev gh http://github.com/blakki

source! ~/.vimperatorrc.local

" vim: set ft=vimperator:
